<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:layout_width="@dimen/categories_item_card_width"
            android:layout_height="@dimen/categories_item_card_height"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/categories_item_card_radius"
            app:cardElevation="@dimen/categories_item_card_elevation"
            app:cardMaxElevation="@dimen/categories_item_card_maxElevation">

        <LinearLayout
                android:id="@+id/background_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_imageView"
                    android:layout_width="@dimen/categories_item_image_width"
                    android:layout_height="@dimen/categories_item_image_height"
                    android:layout_gravity="center"
                    android:elevation="@dimen/categories_item_image_elevation"
                    android:fadingEdgeLength="@dimen/categories_item_image_fadingEdge"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher_round" />

            <TextView
                    android:id="@+id/name_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/categories_item_text_marginTop"
                    android:layout_marginBottom="@dimen/categories_item_text_marginBottom"
                    android:autoSizeMaxTextSize="@dimen/categories_item_text_autoMaxSize"
                    android:autoSizeMinTextSize="@dimen/categories_item_text_autoMinSize"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="T-shirt"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/categories_item_text_size" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>